@model UserInfo

@{
    var className = @Model.WillAttend == true ? "warning":"danger";
}

<main class="text-center">
    <h1 class="h4">Başvuru Detay</h1>
    <p>
        <span class="badge text-bg-@className">
            @if(Model.WillAttend == true)
            {
                <text>Katılıyor</text>
            }
            else{
                <text>Katılmıyor</text>
            }
        </span>
    </p>
    <p>İsim: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Phone: @Model.Phone</p>

    <a asp-asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">Katılımcı Listesi</a>
</main>